<UserControl x:Class="ReolMarket.MVVM.View.RentersView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignWidth="1652" d:DesignHeight="1048">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ReolMarket;component/MVVM/View/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Search -->
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
            <!-- Renters -->
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <!-- Details -->
            <RowDefinition Height="Auto"/>
            <!-- Actions -->
        </Grid.RowDefinitions>

        <!-- ================= SEARCH ================= -->
        <GroupBox Grid.Row="0" Style="{StaticResource CardSection}" Header="Søg">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <!-- mode -->
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                    <!-- query -->
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="180"/>
                    <!-- admin -->
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="0"
                  Style="{StaticResource ComboRight}"
                  ItemsSource="{Binding SearchModes}"
                  SelectedItem="{Binding SelectedSearchMode}"
                  DisplayMemberPath="DisplayName"/>

                <TextBox Grid.Column="2"
                 Style="{StaticResource InputRight}"
                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Grid.Column="4"
                Style="{StaticResource ButtonPrimary}"
                Content="ADMIN"
                Command="{Binding NavigateAdminPopUpCommand}"/>
            </Grid>
        </GroupBox>

        <!-- ================= RENTERS GRID ================= -->
        <GroupBox Grid.Row="2" Style="{StaticResource CardSection}" Header="Lejere">
            <DataGrid ItemsSource="{Binding CustomersView}"
                SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"
                Style="{StaticResource DataGridBase}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Reol"       Width="80"  Binding="{Binding BoothNumber}"/>
                    <DataGridTextColumn Header="Lejer"      Width="*"   Binding="{Binding CustomerName}"/>
                    <DataGridTextColumn Header="Start dato" Width="160"/>
                    <DataGridTemplateColumn Header="Difference" Width="160"
                                  CellStyle="{StaticResource DataGridCellMoney}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Difference, StringFormat={}{0:N2} kr.}" FontWeight="SemiBold"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Slut Dato" Width="160"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- ================= DETAILS ================= -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Profile -->
            <GroupBox Style="{StaticResource CardSection}" Header="Lejer info">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Navn:"        Style="{StaticResource TitleLeft}" Margin="0,0,12,6"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedCustomer.CustomerName}" Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Email:"       Style="{StaticResource TitleLeft}" Margin="0,0,12,6"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedCustomer.Email}" Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Telefon:"     Style="{StaticResource TitleLeft}" Margin="0,0,12,6"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedCustomer.PhoneNumber}" Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Adresse:"     Style="{StaticResource TitleLeft}" Margin="0,0,12,6"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedCustomer.Address}" Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Postnummer:"  Style="{StaticResource TitleLeft}" Margin="0,0,12,6"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SelectedCustomer.PostalCode}" Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Total difference:" Style="{StaticResource TitleLeft}" Margin="0,0,12,0"/>
                    <Border Grid.Row="5" Grid.Column="1" Style="{StaticResource ChipNegative}">
                        <TextBlock Style="{StaticResource ChipText}" Text="-100,60 kr"/>
                    </Border>
                </Grid>
            </GroupBox>

            <!-- Booths for selected -->
            <GroupBox Grid.Column="2" Style="{StaticResource CardSection}" Header="Den valgte lejers reoler">
                <DataGrid ItemsSource="{Binding BoothsView}" Style="{StaticResource DataGridBase}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Reol Nr"   Width="120" Binding="{Binding BoothNumber}"/>
                        <DataGridTextColumn Header="Start Dato" Width="200" Binding="{Binding StartDato}"/>
                        <DataGridTemplateColumn Header="Difference" Width="180"
                                    CellStyle="{StaticResource DataGridCellMoney}"
                                    CellTemplate="{StaticResource CellTemplate.MoneyDifference}"/>
                        <DataGridTemplateColumn Header="" Width="160"
                                    CellTemplate="{StaticResource CellTemplate.PrimaryAction}"/>
                        <DataGridTextColumn Header="Slut Dato" Width="200"/>
                        <DataGridTemplateColumn Header="" Width="160"
                                    CellTemplate="{StaticResource CellTemplate.DangerAction}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>

        <!-- ================= ACTIONS ================= -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,12,0,0">
            <Button Style="{StaticResource ButtonPrimary}" Content="BETAL DIFFERENCE" Width="220"/>
            <Button Style="{StaticResource ButtonBase}"    Content="TILFØJ REOL"      Width="220" Margin="12,0,0,0"/>
        </StackPanel>

    </Grid>
</UserControl>