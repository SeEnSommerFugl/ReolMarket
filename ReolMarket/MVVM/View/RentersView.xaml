<UserControl x:Class="ReolMarket.MVVM.View.RentersView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignWidth="1652" d:DesignHeight="1048">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ReolMarket;component/MVVM/View/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Search -->
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
            <!-- Renters -->
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <!-- Details -->
            <RowDefinition Height="Auto"/>
            <!-- Actions -->
        </Grid.RowDefinitions>

        <!-- ================= SEARCH ================= -->
        <GroupBox Grid.Row="0" Style="{StaticResource CardSection}" Header="Søg">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <!-- mode -->
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                    <!-- query -->
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="180"/>
                    <!-- admin -->
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="0"
                  Style="{StaticResource ComboRight}"
                  ItemsSource="{Binding SearchModes}"
                  SelectedItem="{Binding SelectedSearchMode}"
                  DisplayMemberPath="DisplayName"
                  Height="34" Width="120"/>

                <TextBox Grid.Column="2"
                 Style="{StaticResource InputRight}"
                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                 Height="34" Width="120"/>

                <Button Grid.Column="4"
                Style="{StaticResource ButtonPrimary}"
                Content="ADMIN"
                Command="{Binding NavigateAdminPopUpCommand}"/>
            </Grid>
        </GroupBox>

        <!-- ================= RENTERS GRID ================= -->
        <GroupBox Grid.Row="2" Style="{StaticResource CardSection}" Header="Lejere">
            <Border Style="{StaticResource Card}">
                <DataGrid ItemsSource="{Binding CustomersView}"
              SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"
              Style="{StaticResource DataGrid.Table}"
              Background="Transparent"
              BorderThickness="0">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Lejer"      Width="*"   Binding="{Binding CustomerName}"/>
                        <DataGridTextColumn Header="Start dato" Width="*"/>
                        <DataGridTemplateColumn Header="Difference" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Style="{StaticResource MoneyTextColor}"
                       Text="{Binding Difference, StringFormat={}{0:N2} kr.}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Slut Dato" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </GroupBox>

        <!-- ================= DETAILS ================= -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

          <!-- Profile -->
            <GroupBox Style="{StaticResource CardSection}" Header="Lejer info" > 
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" LastChildFill="True">
                        <TextBlock Text="Navn:" Style="{StaticResource TitleLeft}"  DockPanel.Dock="Left" Width="210"/>
                        <TextBlock Text="{Binding SelectedCustomer.CustomerName}" Style="{StaticResource TextBlockRight}" />
                    </DockPanel>

                    <DockPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" LastChildFill="True">
                        <TextBlock Text="Email:" Style="{StaticResource TitleLeft}"  DockPanel.Dock="Left" Width="210"/>
                        <TextBlock Text="{Binding SelectedCustomer.Email}" Style="{StaticResource TextBlockRight}"/>
                    </DockPanel>

                    <DockPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" LastChildFill="True">
                        <TextBlock Text="Telefon:" Style="{StaticResource TitleLeft}"  DockPanel.Dock="Left" Width="210"/>
                        <TextBlock Text="{Binding SelectedCustomer.PhoneNumber}" Style="{StaticResource TextBlockRight}"/>
                    </DockPanel>

                    <DockPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" LastChildFill="True">
                        <TextBlock Text="Adresse:" Style="{StaticResource TitleLeft}"  DockPanel.Dock="Left" Width="210"/>
                        <TextBlock Text="{Binding SelectedCustomer.Address}" Style="{StaticResource TextBlockRight}"/>
                    </DockPanel>

                    <DockPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" LastChildFill="True">
                        <TextBlock Text="Postnummer:" Style="{StaticResource TitleLeft}"  DockPanel.Dock="Left" Width="210"/>
                        <TextBlock Text="{Binding SelectedCustomer.PostalCode}" Style="{StaticResource TextBlockRight}"/>
                    </DockPanel>

        <DockPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" LastChildFill="True">
            <TextBlock Text="Total difference:" Style="{StaticResource TitleLeft}"  DockPanel.Dock="Left"/>
            <TextBlock Text="{Binding SelectedCustomerDifference}" Style="{StaticResource MoneyTextColor}"/>
        </DockPanel>
    </Grid>
</GroupBox>


            <!-- Booths for selected -->
            <GroupBox Grid.Column="2" Style="{StaticResource CardSection}" Header="Den valgte lejers reoler">
                <DataGrid ItemsSource="{Binding BoothsView}" Style="{StaticResource DataGrid.Table}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Reol Nr"   Width="120" Binding="{Binding BoothNumber}" />
                        <DataGridTextColumn Header="Start Dato" Width="200" Binding="{Binding StartDato}"/>

                        <!-- Kun tekstfarve (ingen celle-baggrund) -->
                        <DataGridTemplateColumn Header="Difference" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Style="{StaticResource MoneyTextColor}"
                                               TextAlignment="Center"
                                               Text="{Binding Difference, StringFormat={}{0:N2} kr.}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

        </Grid>

        <!-- ================= ACTIONS ================= -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,12,0,0">
            <Button Style="{StaticResource ButtonPrimary}" Content="BETAL DIFFERENCE" Width="220"/>
            <Button Style="{StaticResource ButtonBase}"    Content="TILFØJ REOL"      Width="220" Margin="12,0,0,0"/>
        </StackPanel>

    </Grid>
</UserControl>