<Page x:Class="ReolMarket.MVVM.View.RentersView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ReolMarket"
      xmlns:conv="clr-namespace:ReolMarket.Core"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RentersView">

    <Page.Resources>
        <!-- Reference til separat style-fil -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <conv:HiddenToShown x:Key="HideOrShow"/>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <!-- Indhold -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Søg -->
                <RowDefinition Height="12"/>
                <RowDefinition Height="*"/>
                <!-- Lejere grid -->
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <!-- Detaljer + reoler -->
                <RowDefinition Height="Auto"/>
                <!-- Handlingsknapper -->
            </Grid.RowDefinitions>

            <!-- Søg / filter -->
            <Border Style="{StaticResource Card}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Søg" Style="{StaticResource H1}" VerticalAlignment="Center"/>
                    <!-- ComboBox til søgetype -->
                    <ComboBox Grid.Column="2" Margin="6,12,10,16" Height="34"
                       x:Name="SearchModeCombo"
                       ItemsSource="{Binding SearchModes}"
                       SelectedItem="{Binding SelectedSearchMode}"
                       DisplayMemberPath="DisplayName" VerticalContentAlignment="Center"/>
                    <!-- Søgetekst -->
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Grid.Column="4" Height="34" VerticalAlignment="Center"
            x:Name="SearchTextBox"
            Padding="12,6" BorderBrush="{StaticResource Brush.Border}" BorderThickness="1"/>

                    <!-- Only Free CheckBox -->
                    <CheckBox Grid.Column="6" 
                       Content="Vis kun ledige" 
                       IsChecked="{Binding OnlyFree}"
                       Margin="0,0,0,10"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
                    <!--
       BINDINGS (plads):
       - ComboBox.ItemsSource  -> {Binding SearchModes}
       - ComboBox.SelectedItem -> {Binding SelectedSearchMode}
       - TextBox.Text          -> {Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}
                -->
                </Grid>
            </Border>

            <!-- Lejere-liste -->
            <DataGrid Grid.Row="2" ItemsSource="{Binding CustomersView}" SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}" Style="{StaticResource Grid.Base}" x:Name="LejerGrid">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Reol" 
                                 Binding="{Binding BoothNumber}"
                                 Width="60" />
                    <DataGridTextColumn Header="Lejer" 
                                 Binding="{Binding CustomerName}"
                                 Width="*" />
                    <DataGridTextColumn Header="Start dato" Width="140" />
                    <DataGridTemplateColumn Header="Difference" Width="140">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <!-- Note til migselv: DataTriggers senere til Chip.Positive/Negative -->
                                <Border Style="{StaticResource Chip.Positive}">
                                    <TextBlock Text="+500,60 kr"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Slut Dato" Width="140" />
                </DataGrid.Columns>
                <!-- ItemsSource (plads): {Binding Lejere} -->
            </DataGrid>

            <!-- Detaljer + reoler for valgt lejer -->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- Profilkort -->
                <Border Style="{StaticResource Card}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Den valgte lejer" Style="{StaticResource H2}" Margin="0,0,0,8" HorizontalAlignment="Left" Width="128"/>
                            <Button Grid.Column="1" Style="{StaticResource Btn.Base}" Content="Udlej reol" Command="{Binding SaveCustomerCommand}"
                             Visibility="{Binding SelectedBooth, Converter={StaticResource HideOrShow}, FallbackValue=Collapsed}" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" FontSize="10" Width="60" />
                            <Button Grid.Column="1" Style="{StaticResource Btn.Base}" Content="Frigiv reol" Command="{Binding DeleteCustomerCommand}"
                             Visibility="{Binding SelectedBooth.Customer, Converter={StaticResource HideOrShow}, FallbackValue=Collapsed}" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" FontSize="10" Width="60"/>
                        </Grid>

                        <TextBlock Grid.Row="1" Text="Navn:" Style="{StaticResource LabelMuted}"/>
                        <TextBlock Grid.Row="1" Margin="60,0,0,0" Text="{Binding SelectedCustomer.CustomerName}"/>
                        <!-- Text="{Binding SelectedLejer.Name}" -->

                        <TextBlock Grid.Row="2" Text="Email:" Style="{StaticResource LabelMuted}"/>
                        <TextBlock Grid.Row="2" Margin="60,0,0,0" Text="{Binding SelectedCustomer.Email}"/>
                        <!-- Text="{Binding SelectedLejer.Email}" -->

                        <TextBlock Grid.Row="3" Text="Telefon:" Style="{StaticResource LabelMuted}"/>
                        <TextBlock Grid.Row="3" Margin="60,0,0,0" Text="{Binding SelectedCustomer.PhoneNumber}"/>
                        <!-- Text="{Binding SelectedLejer.Phone}" -->

                        <TextBlock Grid.Row="4" Text="Adresse:" Style="{StaticResource LabelMuted}"/>
                        <TextBlock Grid.Row="4" Margin="60,0,0,0" Text="{Binding SelectedCustomer.Address}"
                TextWrapping="Wrap"/>
                        <!-- Text="{Binding SelectedLejer.Address}" -->

                        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Postnummer:" Style="{StaticResource LabelMuted}"/>
                            <TextBlock Margin="8,0,0,0" Text="{Binding SelectedCustomer.PostalCode}"/>
                            <!-- Text="{Binding SelectedLejer.PostalCode}" -->
                        </StackPanel>

                        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,38,0,0">
                            <TextBlock Text="Total difference:" Style="{StaticResource LabelMuted}"/>
                            <Border Style="{StaticResource Chip.Negative}" Margin="8,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="-100,60"/>
                            </Border>
                            <!-- Binding + farveskift via triggers senere -->
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Reoler for valgt lejer -->
                <Border Grid.Column="2" Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Den valgte lejers reoler" Style="{StaticResource H2}" Margin="0,0,0,8"/>
                        <DataGrid Style="{StaticResource Grid.Base}" x:Name="LejerReolerGrid">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Reol Nr" Width="100"/>
                                <DataGridTextColumn Header="Start Dato" Width="160"/>
                                <DataGridTemplateColumn Header="Difference" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource Chip.Positive}">
                                                <TextBlock Text="+500,60 kr"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource Btn.Primary}" Content="Fortsæt" Padding="8,4"/>
                                            <!-- Command/Parameter plads -->
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Slut Dato" Width="160"/>
                                <DataGridTemplateColumn Header="" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource Btn.Danger}" Content="Opsig" Padding="8,4"/>
                                            <!-- Command/Parameter plads -->
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                            <!-- Note til migselv: ItemsSource: {Binding SelectedLejer.Reoler} -->
                        </DataGrid>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Handlingsknapper -->
            <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="5,12,0,0" HorizontalAlignment="Left">
                <Button Style="{StaticResource Btn.Primary}" Content="BETAL DIFFERENCE" Width="150" Height="48"/>
                <!-- Command plads til difference her -->
                <Button Style="{StaticResource Btn.Base}" Content="TILFØJ REOL" Width="150" Height="48" Margin="12,0,0,0"/>
                <!-- Command plads til "Tilføj reol" her -->
            </StackPanel>
        </Grid>
    </Grid>
</Page>
