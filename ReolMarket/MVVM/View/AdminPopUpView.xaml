<Window x:Class="ReolMarket.MVVM.View.AdminPopUpView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReolMarket"
        mc:Ignorable="d"
        Title="AdminPopUpView" Height="720" Width="1280" MinHeight="450" MinWidth="800">

    <Window.Background>
        <ImageBrush ImageSource="/Core/Images/Background.png" Stretch="UniformToFill"/>
    </Window.Background>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ReolMarket;component/MVVM/View/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    

    <Grid Margin="24">

        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
        </Grid.RowDefinitions>

            <Grid Grid.Row="0">
        <Border Style="{StaticResource Card}">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Command="{Binding NewRenterCommand}" Style="{StaticResource ButtonBase}" Content="NY LEJER" Width="150" Height="48" HorizontalAlignment="Center"/>
                    <Button Command="{Binding EditRenterCommand}" Style="{StaticResource ButtonBase}" Content="REDIGER LEJER" Width="150" Height="48" HorizontalAlignment="Center"/>
                </StackPanel>
        </Border>
            </Grid>

        <Grid Grid.Row="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="0">


                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Style="{StaticResource ShowGridWhenNotEditing}">
                    <Grid Grid.Row="0" >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Navn:" Style="{StaticResource LabelMuted}" Grid.Row="0" Grid.Column="0"/>
                        <TextBlock Text="Email:" Style="{StaticResource LabelMuted}" Grid.Row="1" Grid.Column="0"/>
                        <TextBlock Text="Telefon:" Style="{StaticResource LabelMuted}" Grid.Row="2" Grid.Column="0"/>
                        <TextBlock Text="Adresse:" Style="{StaticResource LabelMuted}" Grid.Row="3" Grid.Column="0"/>
                        <TextBlock Text="Postnummer:" Style="{StaticResource LabelMuted}" Grid.Row="4" Grid.Column="0"/>

                        <TextBox Text="{Binding CustomerName}" Grid.Row="0" Grid.Column="1"/>
                        <TextBox Text="{Binding Email}" Grid.Row="1" Grid.Column="1"/>
                        <TextBox Text="{Binding PhoneNumber}" Grid.Row="2" Grid.Column="1"/>
                        <TextBox Text="{Binding Address}" Grid.Row="3" Grid.Column="1"/>
                        <TextBox Text="{Binding PostalCode}" Grid.Row="4" Grid.Column="1"/>


                    </Grid>
                </Border>
                <Border Style="{StaticResource ShowGridWhenEditing}">
                    <Grid Grid.Row="0" >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Navn:" Style="{StaticResource LabelMuted}" Grid.Row="0" Grid.Column="0"/>
                        <TextBlock Text="Email:" Style="{StaticResource LabelMuted}" Grid.Row="1" Grid.Column="0"/>
                        <TextBlock Text="Telefon:" Style="{StaticResource LabelMuted}" Grid.Row="2" Grid.Column="0"/>
                        <TextBlock Text="Adresse:" Style="{StaticResource LabelMuted}" Grid.Row="3" Grid.Column="0"/>
                        <TextBlock Text="Postnummer:" Style="{StaticResource LabelMuted}" Grid.Row="4" Grid.Column="0"/>

                        <ComboBox ItemsSource="{Binding RenterComboBox}" SelectedItem="{Binding SelectedCustomer, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="CustomerName" Style="{StaticResource ComboRight}" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" />
                        <TextBox Text="{Binding SelectedCustomer.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1"/>
                        <TextBox Text="{Binding SelectedCustomer.PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="1"/>
                        <TextBox Text="{Binding SelectedCustomer.Address, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="1"/>
                        <TextBox Text="{Binding SelectedCustomer.PostalCode, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="1"/>

                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Column="2">
                <Border Grid.Column="2" Style="{StaticResource Card}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Den valgte lejers reoler" Style="{StaticResource H2}" Margin="0,0,0,8"/>

                        <DataGrid Grid.Row="1" 
                      ItemsSource="{Binding BoothView}" 
                      Style="{StaticResource DataGridBase}" 
                      x:Name="LejerReolerGrid"
                      VirtualizingPanel.IsVirtualizing="False"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.CanContentScroll="True"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Select" Width="60" CanUserSort="False" CanUserReorder="False">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox x:Name="BoothCheckBox"
                                          Checked="BoothCheckBox_Checked" 
                                          Unchecked="BoothCheckBox_Unchecked"
                                          Tag="{Binding BoothID}"
                                          Loaded="BoothCheckBox_Loaded"
                                          Unloaded="BoothCheckBox_Unloaded"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Reol Nr" 
                                        Width="100" 
                                        Binding="{Binding BoothNumber}"
                                        IsReadOnly="True"/>
                                <DataGridTextColumn Header="Start Dato" Width="160" Binding="{Binding StartDate}"/>
                                <DataGridTemplateColumn Header="Difference" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource ChipPositive}">
                                                <TextBlock Text="+500,60 kr"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource ButtonPrimary}" Content="Fortsæt" Padding="8,4"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Slut Dato" Width="160" Binding="{Binding EndDate}"/>
                                <DataGridTemplateColumn Header="" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource ButtonDanger}" Content="Opsig" Padding="8,4"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>



        </Grid>

            
        <Grid Grid.Row="4">
            <Border Style="{StaticResource Card}">
                <Button Command="{Binding SaveCommand}" Style="{StaticResource ButtonIcon}" Content="TILFØJ" Width="150" Height="48" HorizontalAlignment="Center"/>
            </Border>   
        </Grid>
        
    </Grid>
</Window>
