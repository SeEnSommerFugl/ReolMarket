<Window x:Class="ReolMarket.MVVM.View.AdminPopUpView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReolMarket"
        mc:Ignorable="d"
        Title="AdminPopUpView" Height="450" Width="800">

    <Window.Resources>
        <!-- Reference til separat style-fil -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>

        <!--<Button Grid.Column="1" Style="{StaticResource Btn.Base}" Content="Udlej reol" Command="{Binding SaveCustomerCommand}"
 Visibility="{Binding SelectedBooth, Converter={StaticResource HideOrShow}, FallbackValue=Collapsed}" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" FontSize="10" Width="60" />
        <Button Grid.Column="1" Style="{StaticResource Btn.Base}" Content="Frigiv reol" Command="{Binding DeleteCustomerCommand}"
 Visibility="{Binding SelectedBooth.Customer, Converter={StaticResource HideOrShow}, FallbackValue=Collapsed}" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" FontSize="10" Width="60"/>-->

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Command="{Binding NewRenterCommand}" Style="{StaticResource Btn.Base}" Content="NY LEJER" Width="150" Height="48" HorizontalAlignment="Center"/>
                <Button Command="{Binding EditRenterCommand}" Style="{StaticResource Btn.Base}" Content="REDIGER LEJER" Width="150" Height="48" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Style="{StaticResource ShowGridWhenNotEditing}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Column="0" Grid.Row="0">
                    <TextBlock  Text="Navn:" Style="{StaticResource LabelMuted}"/>
                    <TextBlock Text="Email:" Style="{StaticResource LabelMuted}"/>
                    <TextBlock  Text="Telefon:" Style="{StaticResource LabelMuted}"/>
                    <TextBlock  Text="Adresse:" Style="{StaticResource LabelMuted}"/>
                    <TextBlock Text="Postnummer:" Style="{StaticResource LabelMuted}"/>

                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="0">
                    <TextBox Text="{Binding CustomerName}"/>
                    <!-- Text="{Binding SelectedLejer.Name}" -->
                    <TextBox Text="{Binding Email}"/>
                    <!-- Text="{Binding SelectedLejer.Email}" -->
                    <TextBox Text="{Binding PhoneNumber}"/>
                    <!-- Text="{Binding SelectedLejer.Phone}" -->
                    <TextBox Text="{Binding Address}"/>
                    <TextBox Text="{Binding PostalCode}"/>
                    <!-- Text="{Binding SelectedLejer.PostalCode}" -->

                    <!-- Binding + farveskift via triggers senere -->
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Style="{StaticResource ShowGridWhenEditing}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Column="0" Grid.Row="0">
                    <TextBlock  Text="Navn:" Style="{StaticResource LabelMuted}"/>
                    <TextBlock Text="Email:" Style="{StaticResource LabelMuted}"/>
                    <TextBlock  Text="Telefon:" Style="{StaticResource LabelMuted}"/>
                    <TextBlock  Text="Adresse:" Style="{StaticResource LabelMuted}"/>
                    <TextBlock Text="Postnummer:" Style="{StaticResource LabelMuted}"/>
                    <TextBlock Text="Total difference:" Style="{StaticResource LabelMuted}"/>

                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="0">
                    <ComboBox ItemsSource="{Binding RenterComboBox}" SelectedItem="{Binding SelectedCustomer}" DisplayMemberPath="CustomerName" />
                    <!-- Text="{Binding CustomerName}" -->
                    <TextBox Text="{Binding SelectedCustomer.Email}"/>
                    <!-- Text="{Binding Email}" -->
                    <TextBox Text="{Binding SelectedCustomer.PhoneNumber}"/>
                    <!-- Text="{Binding Phone}" -->
                    <TextBox Text="{Binding SelectedCustomer.Address}"/>
                    <TextBox Text="{Binding SelectedCustomer.PostalCode}"/>
                    <!-- Text="{Binding PostalCode}" -->
                    <Border Style="{StaticResource Chip.Negative}">
                        <TextBlock Text="-100,60"/>
                    </Border>
                    <!-- Binding + farveskift via triggers senere -->

                </StackPanel>

                <Button Command="{Binding SaveCommand}" Grid.Row="1" Grid.ColumnSpan="2" Content="TILFØJ" Width="150" Height="48" HorizontalAlignment="Center"/>

            </Grid>

            <Grid Grid.Column="1">
                <Border Grid.Column="2" Style="{StaticResource Card}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Den valgte lejers reoler" Style="{StaticResource H2}" Margin="0,0,0,8"/>

                        <DataGrid Grid.Row="1" 
                                  ItemsSource="{Binding BoothView}" 
                                  Style="{StaticResource Grid.Base}" 
                                  x:Name="LejerReolerGrid"
                                  VirtualizingPanel.IsVirtualizing="False"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.CanContentScroll="True"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  MaxHeight="300">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Select" Width="60" CanUserSort="False" CanUserReorder="False">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox x:Name="BoothCheckBox"
                                                      Checked="BoothCheckBox_Checked" 
                                                      Unchecked="BoothCheckBox_Unchecked"
                                                      Tag="{Binding BoothID}"
                                                      Loaded="BoothCheckBox_Loaded"
                                                      Unloaded="BoothCheckBox_Unloaded"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Reol Nr" 
                                                    Width="100" 
                                                    Binding="{Binding BoothNumber}"
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Header="Start Dato" Width="160" Binding="{Binding StartDate}"/>
                                <DataGridTemplateColumn Header="Difference" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource Chip.Positive}">
                                                <TextBlock Text="+500,60 kr"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource Btn.Primary}" Content="Fortsæt" Padding="8,4"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Slut Dato" Width="160" Binding="{Binding EndDate}"/>
                                <DataGridTemplateColumn Header="" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource Btn.Danger}" Content="Opsig" Padding="8,4"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>


        </Grid>

        <Grid Grid.Row="2">
            <Button Command="{Binding SaveCommand}" Style="{StaticResource HideButton}" Content="TILFØJ" Width="150" Height="48" HorizontalAlignment="Center"/>
        </Grid>
        
    </Grid>
</Window>
