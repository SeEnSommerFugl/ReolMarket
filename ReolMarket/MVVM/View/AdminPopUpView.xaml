<Window x:Class="ReolMarket.MVVM.View.AdminPopUpView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReolMarket"
        mc:Ignorable="d"
        Title="AdminPopUpView" Height="720" Width="1280" MinHeight="450" MinWidth="800">

    
    
    
    <!-- Da dette view blev ekstremt kompliceret, og tiden rendte ud - Har vi ikke haft den nødvendige tid, til at få alting til at passe design&layout mæssigt.-->
    
    <Window.Background>
        <ImageBrush ImageSource="/Core/Images/Background.png" Stretch="UniformToFill"/>
    </Window.Background>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ReolMarket;component/MVVM/View/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>


    <Grid Margin="24">

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Border Style="{StaticResource Card}">
                <Border Style="{StaticResource Card}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">

                        <Button Command="{Binding NewRenterCommand}"
                Style="{StaticResource ButtonBase}"
                Content="NY LEJER"
                Width="150" Height="48" FontSize="14"/>

                        <Button Command="{Binding EditRenterCommand}"
                Style="{StaticResource ButtonBase}"
                Content="REDIGER LEJER"
                Width="150" Height="48" FontSize="14"/>
                    </StackPanel>
                </Border>

            </Border>
        </Grid>

        <Grid Grid.Row="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="0">


                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Style="{StaticResource ShowGridWhenNotEditing}">
                    <Grid Grid.Row="0" >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Navn:" Style="{StaticResource TitleLeft}" Grid.Row="0" Grid.Column="0"/>
                        <TextBlock Text="Email:" Style="{StaticResource TitleLeft}" Grid.Row="1" Grid.Column="0"/>
                        <TextBlock Text="Telefon:" Style="{StaticResource TitleLeft}" Grid.Row="2" Grid.Column="0"/>
                        <TextBlock Text="Adresse:" Style="{StaticResource TitleLeft}" Grid.Row="3" Grid.Column="0"/>
                        <TextBlock Text="Postnummer:" Style="{StaticResource TitleLeft}" Grid.Row="4" Grid.Column="0"/>

                        <TextBox Text="{Binding CustomerName}" Grid.Column="1" Style="{StaticResource InputRight}"  Width="189"/>
                        <TextBox Text="{Binding Email}" Grid.Row="1" Grid.Column="1" Style="{StaticResource InputRight}"  Width="189"/>
                        <TextBox Text="{Binding PhoneNumber}" Grid.Row="2" Grid.Column="1" Style="{StaticResource InputRight}"  Width="189"/>
                        <TextBox Text="{Binding Address}" Grid.Row="3" Grid.Column="1" Style="{StaticResource InputRight}"  Width="189"/>
                        <TextBox Text="{Binding PostalCode}" Grid.Row="4" Grid.Column="1" Style="{StaticResource InputRight}"  Width="189"/>


                    </Grid>
                </Border>
                <Border Style="{StaticResource ShowGridWhenEditing}">
                    <Grid Grid.Row="0" >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Navn:" Style="{StaticResource TitleLeft}" Grid.Row="0" Grid.Column="0"/>
                        <TextBlock Text="Email:" Style="{StaticResource TitleLeft}" Grid.Row="1" Grid.Column="0"/>
                        <TextBlock Text="Telefon:" Style="{StaticResource TitleLeft}" Grid.Row="2" Grid.Column="0"/>
                        <TextBlock Text="Adresse:" Style="{StaticResource TitleLeft}" Grid.Row="3" Grid.Column="0"/>
                        <TextBlock Text="Postnummer:" Style="{StaticResource TitleLeft}" Grid.Row="4" Grid.Column="0"/>

                        <ComboBox ItemsSource="{Binding RenterComboBox}" SelectedItem="{Binding SelectedCustomer, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="CustomerName" Style="{StaticResource ComboRight}" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" />
                        <TextBox Text="{Binding SelectedCustomer.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1"/>
                        <TextBox Text="{Binding SelectedCustomer.PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="1"/>
                        <TextBox Text="{Binding SelectedCustomer.Address, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="1"/>
                        <TextBox Text="{Binding SelectedCustomer.PostalCode, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="1"/>

                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Column="2">
                <Border Grid.Column="2" Style="{StaticResource Card}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Den valgte lejers reoler" Style="{StaticResource H2}" Margin="0,0,0,8"/>

                        <DataGrid Grid.Row="1"
                                     ItemsSource="{Binding BoothView}"
                                     Style="{StaticResource DataGrid.Table}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     x:Name="LejerReolerGrid">

                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Select" Width="75" CanUserSort="False" CanUserReorder="False">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox x:Name="BoothCheckBox"
                                          Checked="BoothCheckBox_Checked"
                                          Unchecked="BoothCheckBox_Unchecked"
                                          Tag="{Binding BoothID}"
                                          Loaded="BoothCheckBox_Loaded"
                                          Unloaded="BoothCheckBox_Unloaded"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Header="Reol Nr" Width="75" Binding="{Binding BoothNumber}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Start Dato" Width="75" Binding="{Binding StartDate}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Difference: kun tekstfarve (grøn/rød) -->
                                <DataGridTemplateColumn Header="Difference" Width="75">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Style="{StaticResource MoneyTextColor}"
                               TextAlignment="Center"
                               Text="{Binding Difference, StringFormat={}{0:N2} kr.}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Header="Slut Dato" Width="175" Binding="{Binding EndDate}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTemplateColumn Header="" Width="75">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource ButtonDanger}" Content="Opsig" Padding="8,4"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                    </Grid>
                </Border>
            </Grid>



        </Grid>


        <Grid Grid.Row="4">
            <Border Style="{StaticResource Card}">
                <Button Command="{Binding SaveCommand}" Style="{StaticResource ButtonIcon}" Content="TILFØJ" Width="150" Height="48" HorizontalAlignment="Center"/>
            </Border>
        </Grid>

    </Grid>
</Window>
