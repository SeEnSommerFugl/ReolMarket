<Window x:Class="ReolMarket.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReolMarket"
        xmlns:views="clr-namespace:ReolMarket.MVVM.View"
        mc:Ignorable="d"
        Title="MainWindow"
             d:DesignWidth="1920" d:DesignHeight="1080"
             MaxWidth="1920" MaxHeight="1080"
        UseLayoutRounding="True" SnapsToDevicePixels="True">


    <Window.Background>
        <ImageBrush ImageSource="/Core/Images/Background.png" Stretch="UniformToFill"/>
    </Window.Background>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ReolMarket;component/MVVM/View/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Hovedlayout: venstre navigation | indhold -->
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <!-- Venstre rail -->
            <ColumnDefinition Width="220"/>
            <!-- Venstre mellemrum -->
            <ColumnDefinition Width="16"/>
            <!-- Indhold -->
            <ColumnDefinition Width="*"/>
            <!-- Højre mellemrum (spejl) -->
            <ColumnDefinition Width="16"/>
            <!-- Højre gutter (spejl af venstre rail) -->
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>


       <!-- Venstre navigation (data-drevet) -->
<StackPanel Grid.Column="0">
    <TextBlock Text="Reol&#10;Marked"
               TextWrapping="Wrap"
               FontSize="50"
               TextAlignment="Center"
               FontWeight="Bold"/>

    <ListBox ItemsSource="{Binding Nav.Items}"
             SelectedItem="{Binding Nav.Selected}"
             Style="{StaticResource NavListBox}"
             Margin="0,75,0,0"/>
</StackPanel>

<!-- Indholdet binder direkte til Navigation -->
<ContentControl Grid.Column="2"
                Content="{Binding Nav.CurrentView}"/>


    </Grid>
</Window>
