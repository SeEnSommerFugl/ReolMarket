<Window x:Class="ReolMarket.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReolMarket"
        xmlns:views="clr-namespace:ReolMarket.MVVM.View"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowState="Normal"
        Width="1920" Height="1080"
        
        MinWidth="1280" MinHeight="800"
        UseLayoutRounding="True" SnapsToDevicePixels="True">


    <Window.Background>
        <ImageBrush ImageSource="/Core/Images/Background.png" Stretch="UniformToFill"/>
    </Window.Background>

    <Window.Resources>
    </Window.Resources>

    <!-- Hovedlayout: venstre navigation | indhold -->
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <!-- Venstre rail -->
            <ColumnDefinition Width="220"/>
            <!-- Venstre mellemrum -->
            <ColumnDefinition Width="16"/>
            <!-- Indhold -->
            <ColumnDefinition Width="*"/>
            <!-- Højre mellemrum (spejl) -->
            <ColumnDefinition Width="16"/>
            <!-- Højre gutter (spejl af venstre rail) -->
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>


        <!-- Venstre navigation -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Reol&#10;Marked" TextWrapping="Wrap"
                 FontSize="32" FontWeight="Bold" Margin="0,0,0,16"/>
            <Button Command="{Binding NavigateSaleCommand}"  Style="{StaticResource Btn.Nav}" Content="Salg"/>
            <Button Command="{Binding NavigateRentersCommand}" Style="{StaticResource Btn.Nav}" Content="Udlejere"/>
            <Button Command="{Binding NavigateEconomyCommand}" Style="{StaticResource Btn.Nav}" Content="Økonomi"/>
        </StackPanel>

        <ContentControl Grid.Column="2"
                Content="{Binding CurrentView}"
                d:Content="{d:DesignInstance Type=views:EconomyView, IsDesignTimeCreatable=True}"/>

    </Grid>
</Window>
