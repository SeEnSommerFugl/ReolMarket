<Window x:Class="ReolMarket.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReolMarket"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowState="Maximized" MinWidth="1280" MinHeight="800">

    <Window.Background>
        <ImageBrush ImageSource="/Core/Images/Background.png" Stretch="UniformToFill"/>
    </Window.Background>

    <Window.Resources>
    </Window.Resources>

    <!-- Hovedlayout: venstre navigation | indhold -->
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Venstre navigation -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Reol&#10;Marked" TextWrapping="Wrap"
                 FontSize="32" FontWeight="Bold" Margin="0,0,0,16"/>
            <Button Command="{Binding NavigateItemsCommand}" Style="{StaticResource ButtonNavigation}" Content="Salg"/>
            <Button Command="{Binding NavigateRentersCommand}" Style="{StaticResource ButtonNavigation}" Content="Udlejere"/>
            <Button Command="{Binding NavigateEconomyCommand}" Style="{StaticResource ButtonNavigation}" Content="Økonomi"/>
        </StackPanel>

        <Frame Grid.Column="2"
                  Content="{Binding CurrentView}"
                  NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
