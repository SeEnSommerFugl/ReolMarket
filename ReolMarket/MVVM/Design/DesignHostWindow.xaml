<Window x:Class="ReolMarket.MVVM.Design.DesignHostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:ReolMarket.MVVM.View"
        mc:Ignorable="d"
        Title="Design Host - ReolMarket (1920×1080)"
        d:DesignWidth="1920" d:DesignHeight="1080"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        UseLayoutRounding="True" SnapsToDevicePixels="True">

    <!-- Samme baggrund som MainWindow -->
    <Window.Background>
        <ImageBrush ImageSource="/Core/Images/Background.png" Stretch="UniformToFill"/>
    </Window.Background>

    <!-- Hovedlayout: venstre navigation | spacer | indhold -->
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Dummy venstre navigation for korrekt pladsfornemmelse -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Reol&#10;Marked" TextWrapping="Wrap"
                       FontSize="32" FontWeight="Bold" Margin="0,0,0,16"/>
            <Button Content="Salg"     IsEnabled="False" Margin="0,0,0,6"/>
            <Button Content="Udlejere" IsEnabled="False" Margin="0,0,0,6"/>
            <Button Content="Økonomi"  IsEnabled="False"/>
        </StackPanel>

        <!-- Indholdsområde: vælg hvilket Page der skal vises i designer -->
        <Frame Grid.Column="2"
               NavigationUIVisibility="Hidden"
               d:Content="{d:DesignInstance views:EconomyView, IsDesignTimeCreatable=True}"/>
        <!-- Skift til EconomyView ved at ændre linjen ovenfor til:
             d:Content="{d:DesignInstance views:EconomyView, IsDesignTimeCreatable=True}" -->
    </Grid>
</Window>
