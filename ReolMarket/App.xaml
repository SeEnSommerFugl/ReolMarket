<Application x:Class="ReolMarket.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:local="clr-namespace:ReolMarket"
             xmlns:vm="clr-namespace:ReolMarket.MVVM.ViewModel"
             xmlns:views="clr-namespace:ReolMarket.MVVM.View">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="MVVM/View/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type vm:RentersViewModel}">
                <views:RentersView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:EconomyViewModel}">
                <views:EconomyView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ItemsViewModel}">
                <views:ItemsView/>
            </DataTemplate>
            <!--<DataTemplate DataType="{x:Type vm:RentersViewModel}">
                <views:RentersView/>-->
            <!--</DataTemplate>-->
        </ResourceDictionary>
    </Application.Resources>
</Application>
